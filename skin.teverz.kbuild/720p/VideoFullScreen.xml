			<control type="image" id="1">
				<left>-20</left>
				<top>230r</top>
				<width>1320</width>
				<height>230</height>
				<texture border="1">HomeNowPlayingBack.png</texture>
				<animation effect="fade" end="98" time="0" condition="true">Conditional</animation><!-- orig 98 -->
			</control>
			<control type="image" id="1">
				<depth>DepthOSDPopout</depth>
				<description>cover image</description>
				<left>10</left>
				<top>240r</top>
				<width>300</width>
				<height>230</height>
				<texture fallback="DefaultVideoCover.png">$INFO[Player.Art(thumb)]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<bordertexture border="5">button-focus.png</bordertexture>
				<bordersize>5</bordersize>
				<visible>![VideoPlayer.Content(Movies) | VideoPlayer.Content(LiveTV)]</visible>
			</control>
			<control type="image" id="1">
				<depth>DepthOSDPopout</depth>
