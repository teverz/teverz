					<width>50</width>
					<height>25</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture>PVR-IsRecording.png</texture>
					<visible>VideoPlayer.Content(LiveTV) + Player.Recording + !Player.ChannelPreviewActive</visible>
