				<top>5</top>
				<width>1000</width>
				<height>25</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[Player.Chapter,$LOCALIZE[21396]  ]$INFO[Player.ChapterCount, / ]$INFO[Player.ChapterName,[COLOR=grey]  (,)[/COLOR]]</label>
