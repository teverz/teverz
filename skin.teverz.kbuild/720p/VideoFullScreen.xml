				<left>30</left>
				<top>5</top>
				<width>1000</width>
				<height>25</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[VideoPlayer.ChannelGroup,$LOCALIZE[31509]: ]</label>
