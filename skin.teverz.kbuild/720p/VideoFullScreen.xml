				<left>450</left>
				<top>5</top>
				<width>800</width>
				<height>25</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[System.Time]</label>
